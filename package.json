{
  "name": "Homepage_KGS_Rastede",
  "version": "1.0.0",
  "description": "Die Homepage der KGS Rastede, programmiert mit dem CMS Kirby",
  "main": "postcss.config.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/cniehaus/homepage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fullcalendar/icalendar": "^5.10.1",
    "autoprefixer": "^10.4.4",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "cssmin": "^0.4.3",
    "fullcalendar": "^5.10.2",
    "ical.js": "^1.5.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^8.3.1",
    "postcss-use": "^3.0.0",
    "purgecss": "^3.1.3",
    "sass": "^1.49.9",
    "tailwindcss": "^3.3.1"
  },
  "scripts": {
    "_comment": "build: Wenn die scss angepasst wurde | dev: Wenn man neue Bootstrap Klassen benutzt, die noch nicht vorher benutzt wurden",
    "watch": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/twkgs_shrinked.min.css --content './site/**/*.php' -w",
    "buildtw": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/twkgs_shrinked.min.css --content './site/**/*.php' -m",
    "build": "npm run sass && npm run prefix && npm run purge && npm run mini",
    "dev": "npm run purge && npm run mini",
    "sass": "sass ./assets/scss/kgs.scss ./assets/css/kgs.css",
    "prefix": "postcss --no-map --use autoprefixer -b 'last 2 versions' ./assets/css/kgs.css --replace",
    "purge": "purgecss --config ./assets/css/purgecss.config.js --output ./assets/css/kgs_shrinked.css",
    "mini": "cssmin ./assets/css/kgs_shrinked.css > ./assets/css/kgs_shrinked.min.css"
  }
}
